@page "/MyOrders"
@namespace Assignment01.BlazorWebApp
@using Microsoft.Fast.Components.FluentUI
@using Assignment01.EntityProviders
<PageTitle>My Orders</PageTitle>
<h3>My Orders</h3>

@if (Role == AppRole.Member) {
    @if (OrderList == null) {
        <p><em>Loading...</em></p>
    } else {
        <table class="table table-hover table-primary">
            <thead>
                <tr>
                    <th>OrderDate</th>
                    <th>ShippedDate</th>
                    <th>RequiredDate</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                <br/>
            </thead>
            @foreach (var item in OrderList) {
                <tr>
                    <td>@item.OrderDate </td>
                    <td>@item.ShippedDate </td>
                    <td>@item.RequiredDate </td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <td>
                @if (item.OrderDetails.Count > 0) {

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>UnitPrice</th>
                                <th>Discount</th>
                                <th></th>
                            </tr>
                        </thead>
                        @foreach (var subItem in item.OrderDetails) {
                            <tr>
                                <td>@subItem.Product.ProductName</td>
                                <td>@subItem.UnitPrice </td>
                                <td>@subItem.Discount </td>
                            </tr>
                        }
                    </table>
                }
                </td>
                <br />
            }
        </table>
        <br />

    }
}
